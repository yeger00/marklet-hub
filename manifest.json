{
  "manifest_version": 3,
  "name": "GitHub Bookmarklet Sync",
  "version": "1.0",
  "description": "Syncs GitHub repository files into browser bookmarks",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  }
} 